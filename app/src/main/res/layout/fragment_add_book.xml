<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="25dp">

    <ImageView
        android:id="@+id/iv_book_photo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="220dp"
        android:layout_marginEnd="55dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="32dp"
        android:background="@color/colorPrimaryLight"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_book_AB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ibtn_pick_photo"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginBottom="27dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/round_button"
        android:src="@drawable/ic_edit"
        app:layout_constraintBottom_toTopOf="@+id/et_name_AB"
        app:layout_constraintEnd_toEndOf="@+id/iv_book_photo" />

    <TextView
        android:id="@+id/tv_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="43dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="63dp"
        android:text="Name: "
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_author_title"
        app:layout_constraintEnd_toStartOf="@+id/et_name_AB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_book_photo" />

    <EditText
        android:id="@+id/et_name_AB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="218dp"
        android:layout_marginEnd="63dp"
        android:inputType="textPersonName"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_name_title"
        app:layout_constraintTop_toBottomOf="@+id/ibtn_pick_photo" />

    <TextView
        android:id="@+id/tv_author_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:layout_marginEnd="9dp"
        android:layout_marginStart="63dp"
        android:text="Author: "
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_year_title"
        app:layout_constraintEnd_toStartOf="@+id/et_author_AB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_title" />

    <EditText
        android:id="@+id/et_author_AB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="63dp"
        android:inputType="textPersonName"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_author_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_author_title" />

    <TextView
        android:id="@+id/tv_year_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="93dp"
        android:layout_marginEnd="29dp"
        android:layout_marginStart="63dp"
        android:text="Year: "
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/et_year_AB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_author_title" />

    <EditText
        android:id="@+id/et_year_AB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="63dp"
        android:inputType="textPersonName|date"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_year_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_year_title" />

    <Button
        android:id="@+id/btn_add_book_AB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Add Book"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_book_photo" />

</android.support.constraint.ConstraintLayout>